<h1>SMASH THAT MF SUBSCRIBE BUTTON</h1>

<%= form_with(url: support_url, local: true) do |form| %>

<% if @errors.present? %>
  <div class="errors" >
    <% @errors.each do |error| %>
      <%= error %><br>
    <% end %>
  </div>
<% end %>

<hr>
  <div>
    <p><%= form.label 'GIVE US DEM EMAIL DEETS' %></p>
    <p><%= form.email_field :email %></p>
  </div>
  <div>
    <p><%= form.label 'WHATCHA GOTTA SAY?' %></p>
    <p><%= form.text_area :message %></p>
  </div>
  <div>
    <%= form.submit 'SEND THAT SHIT' %>
  </div>
<hr>

<% end %>
